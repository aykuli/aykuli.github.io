---
layout: layouts/home.njk
eleventyNavigation:
  key: CV
  order: 1
---

{% set author = metadata.author %}

<div class="author-info">
  <img src="../../img/aynur_shauerman_small.jpg" alt="Aynur Shauerman" title="Aynur Shauerman" width="200" height="266">
  <div>
    <h2>{{ author.name }}</h2>
    <p>{{ author.prof }} at <a target="_blank" class="employer" href="{{ author.employerurl }}" title="{{ author.employer }}">{{ author.employer }}</a></p>
  </div>
</div>

{% set cvData = cv %}

<div>
  {% for title,info in cvData %}
    <details open>
      <summary  class="cv-list__title">
        {{title}}
      </summary>
      <ul class="cv-list">
        {% for workData in info %}
        <li class="cv-list__item">
        <a href="{{ workData.url }}" target="_blank">
          <img src="../img/cv/{{ workData.img }}" width="100" height="100" alt="{{ workData['company-name'] }}">
        </a>
        <div class="cv-list__item--info">
          <a href="{{ workData.url }}" target="_blank">{{workData['company-name']}}</a>
          <p class="cv-list__item--date">{{workData.time}}</p>
          <p>{{workData.location}}</p>
          {%if workData['work-type']%}
            <p><b>Project type: </b>{{workData['work-type']}}</p>
          {%endif%}
        </div>
        </li>
        {% endfor %}
      </ul>
    </details>
  {% endfor %}
</div>



<div class="pet-projects">
  <h2>Pet projects</h2>
  <div class="pet-projects-list">
  {%- if metadata["pet-projects"] %}
    {%- for name, data in metadata["pet-projects"] %}
    <div class="pet-project">
      <a target="_blank" href="{{ data.url }}" title="{{ data.title }}">
        <img width="150" height="100" src="../../img/pet-projects/{{ name }}.jpg" alt="{{ data.title }}"/>
      </a>
<div>
    <a href="{{data.url}}">{{ data.title }} </a>
  </div>
      </div>
    {%- endfor %}
  {% endif %}
  </div>
</div>


