<header class="container">
  <nav class="header">
    <h1 class="home">
      <a href="{{ '/' | url }}">{{ metadata.title }}</a>
    </h1>
    <ul class="nav">
      {%- for entry in collections.all | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
          <a href="{{ entry.url | url }}">{{ entry.title }}</a>
        </li>
      {%- endfor %}
    </ul>
    <div class="nav nav-resume">
      <a class="cv">
        CV
      </a>
      {%- if metadata.resumeList %}
        {%- for _, data in metadata.resumeList %}
          <a href="{{ data.url }}">
            <img width="32" height="32" src="../../img/icons/{{ data.img }}" alt="{{ data.title }}"/>
          </a>
        {%- endfor %}
      {% endif %}
    </div>
  </nav>
</header>