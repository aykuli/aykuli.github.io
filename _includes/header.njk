<header class="container">
  <nav class="header" x-data="{ isOpen: false }">
    <button class="header-menu-btn">
      {%- if state === 'closed' %}
        <img src='../../img/icons/align-justify.svg' title="open menu" width="40" height="40"/>
      {% else %}
        <img src='../../img/icons/cross.svg' title="close menu" width="40" height="40"/>
      {% endif %}
    </button>
    <h1>
      <a class=" home" href=" {{ '/' | url }} ">{{ metadata.title }}</a>
    </h1>
    <ul class="nav" x-show="isOpen">
      {%- for entry in collections.all | eleventyNavigation %}
        <li>
          <a href="{{ entry.url | url }}" title="{{ entry.title }}" class="nav-item {% if entry.url == page.url %}nav-item-active{% endif %}">
            {%- if entry.title === 'CV' %}
              <span class="cv">
                {{ entry.title }}
              </span>
            {% else %}
              <img src="../../img/icons/{{ entry.title }}.svg" width="40" height="40" alt="{{ entry.title }}">
              {% endif %}
            </a>
          </li>
        {%- endfor %}
      </ul>
      <div class="nav nav-resume">
        {%- if metadata.resumeList %}
          {%- for _, data in metadata.resumeList %}
            <a href="{{ data.url }}" class="nav-item">
              <img width="40" height="40" src="../../img/icons/{{ data.img }}" alt="{{ data.title }}"/>
            </a>
          {%- endfor %}
        {% endif %}
      </div>
    </nav>
  </header>