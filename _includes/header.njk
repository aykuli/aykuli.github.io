<header class="container">
  <nav
    class="header"
    x-data="{ isOpen: false }"
    @keydown.escape="isOpen = false"
    @click.away="isOpen = false"
    x-transition>
    <div class="header__title" x-bind:style="isOpen ? 'border-bottom: 2px solid #fff;' : 'none'">
      <button class="header__menu-btn" @click="isOpen = !isOpen" type="button">
        <img src='../../img/icons/align-justify.svg' title="open menu" width="40" height="40" x-show="!isOpen"/>
        <img src='../../img/icons/cross.svg' title="close menu" width="40" height="40" x-show="isOpen"/>
      </button>
      <h1>
        <a class="main-link" href=" {{ '/' | url }}">
          {{ metadata.title }}
        </a>
      </h1>
    </div>
    <ul class="nav" x-show="isOpen" x-transition>
      {%- for entry in collections.all | eleventyNavigation %}
        <li>
          <a href="{{ entry.url | url }}" title="{{ entry.title }}" class="nav-item {% if entry.url == page.url %} nav-item-active {% endif %} ">
            {%- if entry.title === 'CV' %}
              <span class="cv">
                {{ entry.title }}
              </span>
            {% else %}
              <img src="../../img/icons/{{ entry.title }}.svg" width="40" height="40" alt="{{ entry.title }}">
                <span class="nav-item__key">
                  {{ entry.key }}
                </span>
              {% endif %}
            </a>
          </li>
        {%- endfor %}
      </ul>
      <div class="nav nav-resume" x-show="isOpen" x-transition>
        {%- if metadata.resumeList %}
          {%- for _, data in metadata.resumeList %}
            <a href="{{ data.url }}" class="nav-item" target="_blank">
              <img width="40" height="40" src="../../img/icons/{{ data.img }}" alt="{{ data.title }}"/>
            </a>
          {%- endfor %}
        {% endif %}
      </div>
    </nav>
  </header>