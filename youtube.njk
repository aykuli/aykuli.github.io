---
pagination:
  data: collections
  size: 1
  alias: videos
  addAllPagesToCollections: true
layout: layouts/home.njk
---
<h2 class="videolist__title">Youtube livestreames</h2>
<div class="videolist__lang">
  <span>Russian language</span>
  <img src="../img/icons/rus.png"  width="25" height="25" >
</div>

{% set videoList = youtube %}
{% set videosLen = youtube.length %}

{% for info in videoList %}
  <details open>
    <summary class="videolist__year">
    {{info.year}}
    </summary>
    <ul class="videolist">
      {% for video in info.data %}
      <li class="videolist__item">
        <a href="{{ video.url }}" class="videolist__link" target="_blank">
          <span title="{{ video.title }}">{{ video.title}}</span>
          <img src="../img/icons/youtube.svg" title="watch on youtube" class="videolist__btn--watch" width="20" >
        </a>
        <time class="videolist__date" datetime="{{ video.date | htmlDateString }}">{{ video.date  }}</time>
      </li>
      {% endfor %}
    </ul>
  </details>
{% endfor %}

