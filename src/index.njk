---
title: Home
layout: layout.njk

---
pagination: 
  data: collections.post
  size: 6
  reverse: true
  alias: posts

<section>
  <h1>Notes</h1>
  {{collections.posts}}
  <div class="container px-8 pt-24 mx-auto lg:px-4">
    <div class="flex flex-wrap text-left">
      {% for post in collections.post%}
        <div class="px-8 py-6 lg:w-1/3 md:w-full">
          <div class="p-6 rounded-md bg-blueGrey-200">
            <img  class="object-cover object-center w-full h-40 md-6 rounded"
                  src={{post.url}}{{post.data.featuredImage}}
                  alt={{post.title}}>
            <h2 class="mb-3 text-lg font-semibold text-grey-700 lg:text-2xl title-font">
              {{post.data.title}}
            </h2>
            <p class="mb-4 text-base leading-relaxed">{{post.data.page.excerpt}}</p>
            <a  href="{{post.url | url}}" 
                class="inline flex items-center font-semibold text-blue-700 md:mb-2 lg:mb-0 hover:text-blue-400"
            > Read mode... </a>
          </div>
        </div>
      {%endfor%}
    </div>
  </div>
</section>